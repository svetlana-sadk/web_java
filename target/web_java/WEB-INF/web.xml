<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>simple-servlet</servlet-name>
    <servlet-class>org.example.webjava.controller.SimpleServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>simple-servlet</servlet-name>
    <url-pattern>/simple</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>login-servlet</servlet-name>
    <servlet-class>org.example.webjava.controller.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login-servlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>redirection-servlet</servlet-name>
    <servlet-class>org.example.webjava.controller.RedirectionEchecServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>redirection-servlet</servlet-name>
    <url-pattern>/target</url-pattern>
  </servlet-mapping>
</web-app>
